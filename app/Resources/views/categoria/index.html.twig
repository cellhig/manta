{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Categorías</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': categorium.id }) }}">{{ categorium.id }}</a></td>
                <td>{{ categorium.nombre }}</td>
                <td>{{ categorium.descripcion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('categoria_show', { 'id': categorium.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('categoria_new') }}">Crear nueva catgoría</a>
        </li>
    </ul>
{% endblock %}
